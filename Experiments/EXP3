# 1D & 2D Cosine Signal
import numpy as np
import matplotlib.pyplot as plt

# Frequency range
w = np.arange(0, np.pi, np.pi/8)
n = np.arange(0, 50)

# 1D Cosine
plt.figure()
for wi in w:
    plt.plot(n, np.cos(wi * n))
plt.title("1D Cosine Signals")
plt.show()

# 2D Cosine
w1 = w2 = w
X, Y = np.meshgrid(w1, w2)
Z = np.cos(X + Y)

plt.figure()
plt.imshow(Z, cmap='gray')
plt.title("2D Cosine Signal")
plt.colorbar()
plt.show()

